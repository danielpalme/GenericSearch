<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GenericSearch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="container">
            <a asp-area="" asp-controller="DefaultSearch" asp-action="Index" class="navbar-brand">GenericSearch</a>
            <ul class="navbar-nav mr-auto">
                @{
                    string key = string.Empty;
                    if (this.Url.ActionContext.RouteData.Values.TryGetValue("controller", out object? value))
                    {
                        key = value!.ToString()!;
                    }
                }
                <li class="nav-item @(key == "DefaultSearch" ? " active" : "")"><a asp-area="" asp-controller="DefaultSearch" asp-action="Index" class="nav-link">Default Search Criteria</a></li>
                <li class="nav-item@(key == "CustomSearch" ? " active" : "")"><a asp-area="" asp-controller="CustomSearch" asp-action="Index" class="nav-link">Custom Search Criteria</a></li>
                <li class="nav-item@(key == "PagedSearch" ? " active" : "")"><a asp-area="" asp-controller="PagedSearch" asp-action="Index" class="nav-link">Paged Search</a></li>
                <li class="nav-item@(key == "GrammarSearch" ? " active" : "")"><a asp-area="" asp-controller="GrammarSearch" asp-action="Index" class="nav-link">Grammar Search</a></li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/jquery-3.3.1.slim.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
</body>
</html>
